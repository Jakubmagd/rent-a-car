@{
    ViewBag.Title = "Home Page";
}

<!-- Jumbotron with Carousel-->
<div id="carousel-cars" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item bg bg1 active">
            <div class="container">
                <div class="carousel-caption">
                    <h4>Automobili po Vašoj mjeri</h4>
                    <p>Pogledajte ponudu automobila.</p>
                    <button class="btn btn-primary">Otvori</button>
                    <br />
                </div>
            </div>
        </div>
        <div class="item bg bg2">
            <div class="container">
                <div class="carousel-caption">
                    <h4>Rezerviraj automobil</h4>
                    <p>Iz velike ponude, rezervirajte svoj automobil još danas!  </p>
                    <button class="btn btn-primary">Otvori</button>
                    <br />
                </div>
            </div>
        </div>
        <div class="item bg bg3">
            <div class="carousel-caption">
                <h4>Elegancija i kvaliteta</h4>
                <p>Odaberite prekrasne automobile za vožnju kraj hrvatskih ljepota.</p>
                <button class="btn btn-primary">Otvori</button>
                <br />
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-cars" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-cars" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

